@model TimesheetApp.ViewModels.HomeViewModel

<div class="container">
    <form method="post">
        <div class="row">
            <div class="d-grid gap-2 d-md-block">
                <button class="btn btn-primary" type="button">Add Row</button>
                <button class="btn btn-success" type="submit" asp-action="Submit">Submit</button>
            </div>
        </div>

        <div class="row">
            <div class="col-2"></div>
            <div class="col-2"></div>
            <div class="col-1 text-center">Monday</div>
            <div class="col-1 text-center">Tuesday</div>
            <div class="col-1 text-center">Wednesday</div>
            <div class="col-1 text-center">Thursday</div>
            <div class="col-1 text-center">Friday</div>
            <div class="col-1 text-center">Saturday</div>
            <div class="col-1 text-center">Sunday</div>
        </div>
        <div class="row">

            <div class="col-2">
                <select class="form-select" aria-label="Select project">
                    @foreach (var project in Model.Projects)
                    {
                        <option value="@project.Id">@project.Name</option>
                    }
                </select>
            </div>
            <div class="col-2">
                <select class="form-select" aria-label="Select billing">
                    @foreach (var billing in Model.BillingCategories)
                    {
                        <option model="billing" value="@billing.Id">@billing.Name</option>
                    }
                </select>
            </div>
            <div class="col-1">
                <input class="text-center input-working-day" value="" type="number" name="monday"/>
            </div>
            <div class="col-1">
                <input class="text-center input-working-day" value="" type="number" name="tuesday"/>
            </div>
            <div class="col-1">
                <input class="text-center input-working-day" value="" type="number" name="wednesday"/>
            </div>
            <div class="col-1">
                <input class="text-center input-working-day" value="" type="number" name="thursday"/>
            </div>
            <div class="col-1">
                <input class="text-center input-working-day" value="" type="number" name="friday"/>
            </div>
            <div class="col-1">
                <input class="text-center input-working-day" value="" type="number" name="saturday"/>
            </div>
            <div class="col-1">
                <input class="text-center input-working-day" value="" type="number" name="sunday"/>
            </div>
        </div>
    </form>
</div>



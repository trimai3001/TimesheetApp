@{
    ViewData["Title"] = "Timesheet";
}

<div class="container">
    <div class="row">
        <div class="d-grid gap-2 d-md-block">
            <button class="btn btn-primary" type="button">Add Row</button>
            <button class="btn btn-primary" type="button" asp-action="Save">Save</button>
            <button class="btn btn-success" type="button">Submit</button>
        </div>
    </div>

    <div class="row">
        <div class="col-2"></div>
        <div class="col-2"></div>
        <div class="col-1 text-center">Monday</div>
        <div class="col-1 text-center">Tuesday</div>
        <div class="col-1 text-center">Wednesday</div>
        <div class="col-1 text-center">Thursday</div>
        <div class="col-1 text-center">Friday</div>
        <div class="col-1 text-center">Saturday</div>
        <div class="col-1 text-center">Sunday</div>
    </div>
    <div class="row">
        <form>
            <div class="col-2">
                <select class="form-select" aria-label="Select project">
                    <option value="1">Project 1</option>
                    <option value="2">Project 2</option>
                    <option value="3">Project 3</option>
                </select>
            </div>
            <div class="col-2">
                <select class="form-select" aria-label="Select billing">
                    <option value="1">Bill</option>
                    <option value="2">Non-bill</option>
                </select>
            </div>
            <div class="col-1">
                <input class="text-center input-working-day" name="monday" placeholder="0" />
            </div>
            <div class="col-1">
                <input class="text-center input-working-day" name="tuesday" placeholder="0" />
            </div>
            <div class="col-1">
                <input class="text-center input-working-day" name="wednesday" placeholder="0" />
            </div>
            <div class="col-1">
                <input class="text-center input-working-day" name="thursday" placeholder="0" />
            </div>
            <div class="col-1">
                <input class="text-center input-working-day" name="friday" placeholder="0" />
            </div>
            <div class="col-1">
                <input class="text-center input-working-day" name="saturday" placeholder="0" />
            </div>
            <div class="col-1">
                <input class="text-center input-working-day" name="sunday" placeholder="0" />
            </div>
        </form>
    </div>
</div>



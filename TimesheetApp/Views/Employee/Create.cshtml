@model TimeSheetApp.Models.Employee

<h4>Employee</h4>
<hr />
<div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-2">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="EmployeeId" class="control-label">Id</label>
                <input asp-for="EmployeeId" class="form-control" />
                <span asp-validation-for="EmployeeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Role" class="control-label"></label>
                @Html.DropDownListFor(model => model.Role, new SelectList(ViewBag.Roles, "Id", "Name"), "Select Role", new { @class = "form-select", @name = "role" })
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <table class="table table-hover" id="table" data-toggle="table" data-height="560">
            <thead class="thead-light">
                <tr>
                    <th scope="col" class="col-1" data-field="EmployeeId" data-sortable="true">#</th>
                    <th scope="col" class="col-2" data-field="Name" data-sortable="true">Name</th>
                    <th scope="col" class="col-1" data-field="Role.Name" data-sortable="true">Role</th>
                    <th scope="col" class="col-1"</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var employee in ViewBag.AllEmployee)
                {
                <tr>
                    <th scope="row">@employee.EmployeeId</th>
                    <td>@employee.Name</td>
                    <td>@employee.Role.Name</td>
                    <td style="text-align:center">
                        @*<button type="submit" class="btn-danger" onclick="location.href = '@Url.Action("Delete", "Employee", new { @class = "form", @name = "del"})'">
                            Delete
                            <span style="color: red">
                                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-x" viewBox="0 0 16 16">
                                    <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z" />
                                </svg>
                            </span>
                        </button>*@
                        <form asp-action="Delete">
                            <div class="btn-group" role="group">
                                <button class="btn btn-danger" type="submit" value="Delete">
                                    <span style="color: white">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                                            <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z" />
